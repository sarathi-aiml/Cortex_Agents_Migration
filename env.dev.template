# =============================================================================
# SNOWFLAKE CORTEX AGENT MIGRATION CONFIGURATION
# =============================================================================
# This configuration supports migrating agents between different Snowflake accounts
# Source Account: Where the original agent exists (DEV environment)
# Target Account: Where the agent will be migrated to (PROD environment)

# =============================================================================
# SOURCE ACCOUNT CONFIGURATION (DEV Environment)
# =============================================================================
SOURCE_ACCOUNT_URL=https://<SOURCE_ACCOUNT>.snowflakecomputing.com
SOURCE_PAT=<SOURCE_PAT_TOKEN>
SOURCE_DATABASE=<SOURCE_DATABASE>
SOURCE_SCHEMA=<SOURCE_SCHEMA>
SOURCE_DEFAULT_AGENT=<SOURCE_DEFAULT_AGENT>

# =============================================================================
# TARGET ACCOUNT CONFIGURATION (PROD Environment)
# =============================================================================
TARGET_ACCOUNT_URL=https://<TARGET_ACCOUNT>.snowflakecomputing.com
TARGET_PAT=<TARGET_PAT_TOKEN>
TARGET_DATABASE=<TARGET_DATABASE>
TARGET_SCHEMA=<TARGET_SCHEMA>

# =============================================================================
# MIGRATION SETTINGS
# =============================================================================
# Default naming convention for migrated agents
MIGRATION_NAME_SUFFIX=_PROD
# Add migration metadata to agent comments
ADD_MIGRATION_METADATA=true
# Test connection before migration
TEST_CONNECTIONS=true

